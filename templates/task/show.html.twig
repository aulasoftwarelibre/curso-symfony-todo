{% extends 'base.html.twig' %}

{% block title %}Tarea{% endblock %}

{% block body %}
    <h1>Tarea</h1>

    <table class="ui description table">
        <tbody>
            <tr>
                <td class="collapsing">Id</td>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <td class="collapsing">Descripción</td>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <td class="collapsing">¿Terminada?</td>
                <td>{{ task.isDone ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <td class="collapsing">Fecha creación</td>
                <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="ui buttons">
        <a class="ui primary labeled icon button" href="{{ path('task_index') }}"><i class="left arrow icon"></i> Volver</a>
        <a class="ui secondary labeled icon button" href="{{ path('task_edit', {'id': task.id}) }}"><i class="pencil icon"></i> Editar</a>
    </div>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}