<form method="post" action="{{ path('task_delete', {'id': task.id}) }}" onsubmit="return confirm('¿Estás seguro que quieres borrar esta tarea?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
    <button class="ui negative labeled icon button"><i class="trash icon"></i> Borrar</button>
</form>